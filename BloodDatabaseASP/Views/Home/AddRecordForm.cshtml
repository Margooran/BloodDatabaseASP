@model IEnumerable<BloodDatabaseASP.Models.PatientEntity>
@{
    ViewData["Title"] = "Add Record";
}

<div class="text-center">
    <h1 class="display-4">Add New Record</h1>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-4">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="AddRecord" asp-controller="Home" method="post">
    <div class="form-group mt-4">
        <label for="PatientID">Patient</label>
        <select class="form-control" id="PatientID" name="PatientID" required>
            <option value="" disabled selected>Select a patient</option>
            @foreach (var patient in Model)
            {
                <option value="@patient.PatientID">@patient.PatientName</option>
            }
        </select>
    </div>

    <div class="form-group mt-4">
        <label for="Quantity">Quantity</label>
        <input class="form-control" type="number" id="Quantity" name="Quantity" value="450" min="450" max="750" step="50" required />
    </div>

    <div class="form-group mt-4">
        <label for="DateTime">Date</label>
        <input class="form-control" type="datetime-local" id="DateTime" name="DateTime" required />

        <script>
            const date = new Date();
            date.setHours(date.getHours() + 2);
            document.getElementById('DateTime').value = date.toISOString().slice(0, 16);
        </script>
    </div>

    <button class="btn btn-primary mt-4" type="submit">Add Record</button>
</form>